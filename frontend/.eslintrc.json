{
  "rules": {
      "semi": "off",
      "allowArrowFunctions": true,
      "comma-dangle": ["error", "never"]
  },
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "plugins": [
    "react",
    "redux-saga"
  ]
}